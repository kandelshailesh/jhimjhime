        <button type="button" id="hello" class="btn btn-primary d-none" data-toggle="modal" data-target="#myModal" accesskey="h">
            Create Account
        </button>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content" style="margin:auto; height: 500px; width: 900px;">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Account</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form class="accountinformations">
                        <div class="modal-body ">
                            <div class="row ">
                                <div class="col-md-5 accountinformation">
                                    <fieldset class="border border-success p-2">
                                        <legend class="w-auto">General Info.</legend>
                                        <label style="font-size: 12px;">Name</label><input type="text" name="accountname" id="accountname" tabindex="-1" class="ml-2  border-0 w-50 form-control d-inline" required autofocus><br></br>
                                        <label style="font-size: 12px;">Alias</label><input type="text" name="alias" id="alias" class=" ml-2  border-0 w-50 form-control d-inline"><br></br>
                                        <label style="font-size: 12px;">Print Name:</label><input name="printname" type="text" class=" ml-2 form-control border-0 d-inline w-50 "><br></br>
                                        <label style="font-size: 12px;">Group</label><select class="ml-2 w-50 form-control d-inline" style="font-size: 12px; height:30px;" name="accountgroup" onchange="javascript:changeaccounttype(event)" id="accountgroup" required>
                                            <option value="0">------------</option>
                                            <% results.forEach(function(result) { %>
                                            <option value='<%= result.groupid %>'>
                                                <%= result.grouptitle %>
                                            </option>
                                            <% }); %>
                                        </select><br></br>
                                    </fieldset>
                                </div>
                                <div class="col-md-6 accountinformation">
                                    <fieldset class="border border-success p-2">
                                        <legend class="w-auto">Address Info.</legend>
                                        <label style="font-size: 12px;">Address</label><input type="text" name="address" id="address" class="ml-2 border-0 w-50 form-control d-inline"><br></br>
                                        <label style="font-size: 12px;">Country</label><input type="text" name="country" id="country" class=" ml-2  border-0 w-50 form-control d-inline"><br></br>
                                        <label style="font-size: 12px;">Tel. No.</label><input name="telno" id="telno" type="number" class=" ml-2 form-control border-0 d-inline w-50 "><br></br>
                                        <label style="font-size: 12px;">Fax</label><input name="fax" id="fax" type="number" class=" ml-2 form-control border-0 d-inline w-50 "><br></br>
                                        <label style="font-size: 12px;">Mobile No.</label><input name="mobileno" id="mobileno" type="number" class=" ml-2 form-control border-0 d-inline w-50 "><br></br>
                                        <label style="font-size: 12px;">Email</label><input name="email" id="email" type="email" class=" ml-2 form-control border-0 d-inline w-50 "><br></br>
                                        <label style="font-size: 12px;">Contact Person</label><input name="contactperson" id="contactperson" required type="text" class=" ml-2 form-control border-0 d-inline w-50 "><br>
                                        <div class="form-group" style="display:none; max-height:20px !important;" id="accountnodiv">
                                            <label id="accountnolabel" style="font-size:12px;">Account No</label> <input id="accountno" name="accountno" type="number" class=" ml-2 border-0 d-inline w-50 " disabled>
                                        </div>
                                        <label style="font-size: 12px;">IT PAN</label><input id="panno" name="panno" type="number" class=" ml-2 form-control border-0 d-inline w-50 "><br></br>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <label style="font-size: 15px;">Amount from the previous year</label>
                                <input id="previousyear" name="previousyear" style="width:100px !important; " type="text" class=" ml-2 form-control border-0 w-25 d-inline " />
                                <input id="previousamount" name="previousamount" type="number" class=" ml-2 form-control border-0 d-inline w-50 " /><br>
                                <button type="submit" onclick="javascript:submitaccount(event);" class="btn btn-primary">Save</button>
                                <button type="reset" class="btn resetaccount d-none btn-secondary" id="closecreateaccount" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-primary d-none" data-toggle="modal" data-target="#contraentry">
            Create Contra
        </button>
        <!-- Form for Contra Voucher  -->
        <div class="modal fade" id="contraentry" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel1">Add Contra</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form class="contraform">
                        <div class="modal-body ">
                            <fieldset class="border p-3">
                                <legend class="w-auto">General Info.</legend>
                                <label style="font-size: 18px;">Bank Name</label><input type="text" name="bankname" id="bankname" class="ml-2  border-0 w-75 form-control d-inline" required autofocus />
                                <label style="font-size: 18px;">A/C No</label><input type="text" name="number" id="bankacno" class=" ml-2  border-0 w-75 form-control d-inline" />
                                <label style="font-size: 18px;">Group</label><select class="ml-2 p-0 w-75 form-control d-inline" name="accountgroup" onchange="javascript:changeaccounttype(event)" id="accountgroup" required>
                                    <option value="0">------------</option>
                                    <% results.forEach(function(result) { %>
                                    <option value='<%= result.groupid %>'>
                                        <%= result.grouptitle %>
                                    </option>
                                    <% }); %>
                                </select>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn resetaccount btn-secondary" id="closecreateaccount" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" onclick="javascript:submitcontra(event)">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

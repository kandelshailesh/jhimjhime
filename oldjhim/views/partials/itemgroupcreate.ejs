<div class="modal fade" id="itemgroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="margin:auto;width: 400px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Stock Group Creation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="itemgroupinformations" action="">
                <div class="modal-body ">
                    <div class="row ">
                        <div class="col-md-10 itemgroupinformation">
                            <label style="font-size: 12px;">Name</label><input type="text" name="itemname" id="accountname" tabindex="-1" class="ml-2  border-0 w-50 form-control d-inline" required autofocus><br></br>
                            <label style="font-size: 12px;">Alias</label><input type="text" name="itemalias" id="itemalias" tabindex="-1" class="ml-2  border-0 w-50 form-control d-inline" required ><br></br>
                            <label style="font-size: 12px;">Under</label>
                            <select class="ml-2 w-50 form-control d-inline" style="font-size: 12px; height:30px;" name="accountgroup" onchange="javascript:changeaccounttype(event)" id="accountgroup" required>
                                <option value="0">------------</option>
                                <!--  <%results.forEach(function(result) { %>
                                <option value='<%= result.groupid %>'>
                                    <%= result.grouptitle %>
                                </option>
                                <% }); %> -->
                            </select><br></br>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit"  class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>